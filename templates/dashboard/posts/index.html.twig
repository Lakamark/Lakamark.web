{% extends 'dashboard_base.html.twig' %}

{% block body %}
    <h1 class="h1">Dashboard Posts</h1>
    <p>Mange posts for the blog</p>
    <p class="mg-t3">
        <a href="#" class="btn btn-full btn-success" title="Create a new post">Create a new article</a>
    </p>
    <div class="pd-3 table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Online?</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for row in rows %}
                <tr>
                    <td>{{ row.id }}</td>
                    <td>{{ row.title }}</td>
                    <td>{{ row.online }}</td>
                    <td>
                        <a href="#" class="btn btn-secondary">Edit</a>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}