{% extends 'base.html.twig' %}

{% block title "HomePage" %}

{% block metas %}
    <meta name="description" content="Home page">
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="h1">Homepage</h1>
    </div>
    <!-- Start of the Blog section -->
    <section class="homepage-section">
        <div class="container">
            <div class="homepage-section-title">
                <h2 class="h2">Last Posts</h2>
                <a href="{{ path('blog.index') }}" title="Blog section">See more posts</a>
            </div>
            <carousel-component class="homepage-carousel" slidesvisibles="2">
                {% for post in posts %}
                    <div class="carousel__component__item">
                        <div class="carousel__component__image">
                            <img src="https://picsum.photos/700/300" alt="Thumbnail">
                        </div>
                        <div class="carousel__component__content stacked-content">
                            <div class="carousel__component__title">
                                <h3>{{ post.title }}</h3>
                            </div>
                            <div class="carousel__component__description">
                                {{ excerpt(post.content) }}
                            </div>
                            <div class="carousel__component__footer">
                                <a href="{{ path('blog.show', {slug: post.slug}) }}" class="btn btn-primary"
                                   title="Learn more about the article: {{ post.title }}">Learn more...</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </carousel-component>
        </div>
    </section>
    <!-- End of the Blog section -->
    <!-- Start of the Project section -->
    <section class="homepage-section">
        <div class="container">
            <div class="homepage-section-title">
                <h2 class="h2">Last Projects</h2>
                <a href="#" title="See more projects...">See more projects</a>
            </div>
        </div>
    </section>
    <!-- End of the Project section -->
    <!-- Start of the Event section -->
    <section class="homepage-section">
        <div class="container">
            <div class="homepage-section-title">
                <h2 class="h2">Events</h2>
                <a href="#" title="See more projects...">See all the event list</a>
            </div>
        </div>
    </section>
    <!-- End of the Event section -->
{% endblock %}
